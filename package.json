{
  "name": "dixi",
  "version": "1.0.0-rc.1",
  "description": "Simply project builder based on Gulp 4 and Webpack 2",
  "author": "Grigory K. <grigorysergeevich@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/grigory90/dixi"
  },
  "bugs": {
    "url": "https://github.com/grigory90/dixi/issues"
  },
  "homepage": "https://github.com/grigory90/dixi",
  "license": "MIT",
  "keywords": [
    "project-builder",
    "builder",
    "starter-kit",
    "starter"
  ],
  "engines": {
    "node": ">= 6"
  },
  "preferGlobal": true,
  "bin": "./bin/dixi.js",
  "main": "./lib/index.js",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
      "test": "xo ./lib/** !./lib/data/app/**"
  },
  "xo": {
      "space": 4,
      "rules": {
          "padded-blocks": "off",
          "unicorn/no-process-exit": "off",
          "import/order": "off",
          "import/no-unresolved": "off",
          "import/no-dynamic-require": "off"
      }
  },
  "dependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.22.0",
    "browser-sync": "^2.18.8",
    "chalk": "^1.1.3",
    "del": "^2.2.2",
    "fs-extra": "^2.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-changed": "^2.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-less": "^3.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rev-all": "^0.9.7",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-sass": "^3.1.0",
    "gulp-sizereport": "^1.2.0",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-svg-sprite": "^1.3.6",
    "gulp-twig": "^0.7.0",
    "gulp-zip": "^4.0.0",
    "moment": "^2.17.1",
    "uglifyjs-webpack-plugin": "^0.3.0",
    "vinyl-ftp": "^0.6.0",
    "webpack": "^2.2.1",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "xo": "^0.17.1"
  }
}
