{
  "name": "dixi",
  "version": "1.2.0",
  "description": "Simply project builder based on Gulp 4 and Webpack 2",
  "author": "Grigory K. <grigorysergeevich@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/grigory90/dixi"
  },
  "bugs": {
    "url": "https://github.com/grigory90/dixi/issues"
  },
  "homepage": "https://github.com/grigory90/dixi",
  "license": "MIT",
  "keywords": [
    "project-builder",
    "builder",
    "starter-kit",
    "starter"
  ],
  "engines": {
    "node": ">= 6"
  },
  "preferGlobal": true,
  "bin": "./bin/dixi.js",
  "main": "./lib/index.js",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "test": "xo ./lib/** !./lib/data/app/**"
  },
  "xo": {
    "space": 4,
    "rules": {
      "padded-blocks": "off",
      "unicorn/no-process-exit": "off",
      "import/order": "off",
      "import/no-unresolved": "off",
      "import/no-dynamic-require": "off"
    }
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.13",
    "chalk": "^2.2.0",
    "del": "^3.0.0",
    "fs-extra": "^4.0.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-changed": "^3.1.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-rev-all": "^0.9.7",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-svg-sprite": "^1.3.7",
    "gulp-twig": "^1.1.1",
    "gulp-zip": "^4.0.0",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "vinyl-ftp": "^0.6.0",
    "webpack": "^3.8.1",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "xo": "^0.18.2"
  }
}
