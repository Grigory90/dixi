{
  "name": "dixi",
  "version": "2.0.0",
  "description": "It is a tool for assembling prototypes and simple web pages, based on Gulp 4 and Webpack 3.",
  "author": "Grigory K. <grigorysergeevich@gmail.com>",
  "repository": "github:grig0ry/dixi",
  "homepage": "https://github.com/grig0ry/dixi",
  "bugs": "https://github.com/grig0ry/dixi/issues",
  "license": "MIT",
  "keywords": [
    "builder",
    "assembling",
    "prototyping"
  ],
  "engines": {
    "node": ">=6"
  },
  "bin": "./bin/dixi.js",
  "files": [
    "bin",
    "lib",
    "data",
    "test.js"
  ],
  "scripts": {
    "test": "xo && ava"
  },
  "xo": {
    "space": 4,
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed",
        {
          "requireForBlockBody": true
        }
      ],
      "object-curly-spacing": "off",
      "padded-blocks": "off",
      "unicorn/no-process-exit": "off",
      "import/order": "off",
      "import/no-unresolved": "off",
      "import/no-dynamic-require": "off"
    }
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.2",
    "chalk": "^2.3.0",
    "del": "^3.0.0",
    "fs-extra": "^5.0.0",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-changed": "^3.2.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-rev": "^8.1.1",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-svg-sprite": "^1.3.7",
    "gulp-twig": "^1.1.1",
    "gulp-zip": "^4.1.0",
    "uglifyjs-webpack-plugin": "^1.1.5",
    "webpack": "^3.10.0",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "xo": "^0.18.2"
  }
}
