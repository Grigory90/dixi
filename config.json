{
    "app": {
        "name": "projectname"
    },

    "options": {
        "preproc": "scss",
        "bundle": true,
        "babel": true,
        "revision": true,
        "manifest": true,
        "deploy": false,
        "zip": true
    },

    "dirs": {
        "build": "./app/build",
        "dist": "./app/dist",
        "src": "./app/src"
    },

    "plugins": {
        "autoprefixer": {
            "browsers": ["ie >= 10", "last 2 versions", "> 2%"]
        },
        "cssnano": {
            "safe": true,
            "calc": false,
            "colormin": false,
            "discardDuplicates": false,
            "discardComments": {
                "removeAll": true
            }
        },
        "sass": {
            "includePaths": "./node_modules",
            "outputStyle": "expanded"
        },
        "less": {
            "paths": ["./node_modules"]
        },
        "rollup": {
            "context": "window",
            "format": "iife",
            "globals": {
                "jquery": "jQuery"
            }
        },
        "twig": {},
        "browsersync": {
            "open": false,
            "notify": false
        },
        "imagemin": {
            "verbose": true
        },
        "svgsprite": {
            "mode": {
                "symbol": {
                    "dest": ".",
                    "sprite": "sprite.svg"
                }
            },
            "shape": {
                "id": {
                    "generator": "icon-%s"
                }
            },
            "svg": {
                "xmlDeclaration": false,
                "doctypeDeclaration": false,
                "rootAttributes": {
                    "style": "position:absolute;width:0;height:0;overflow:hidden"
                }
            }
        },
        "ftp": {
            "parallel": 10
        }
    }
}
